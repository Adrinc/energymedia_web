---
// metodologia.astro
// Página de Metodología - Energy Media (6 secciones)

import LayoutBasic from '../layouts/LayoutBasic.astro';

// Importar todas las secciones
import MetodologiaSeccion1 from '../components/metodologia/Secciones/MetodologiaSeccion1';
import MetodologiaSeccion2 from '../components/metodologia/Secciones/MetodologiaSeccion2';
import MetodologiaSeccion3 from '../components/metodologia/Secciones/MetodologiaSeccion3';
import MetodologiaSeccion4 from '../components/metodologia/Secciones/MetodologiaSeccion4';
import MetodologiaSeccion5 from '../components/metodologia/Secciones/MetodologiaSeccion5';
import MetodologiaSeccion6 from '../components/metodologia/Secciones/MetodologiaSeccion6';

// SEO metadata
const pageTitle = "Metodología - Energy Media | Proceso Transparente de Video Marketing Multicultural";
---

<LayoutBasic title={pageTitle} showFooter={true}>
    <!-- Sección 1: Hero -->
    <MetodologiaSeccion1 client:only="react" transition:persist />
    
    <!-- Sección 2: Timeline de Proceso (6 pasos) -->
    <MetodologiaSeccion2 client:only="react" transition:persist />
    
    <!-- Sección 3: OYE - Metodología detallada (con anchor #oye) -->
    <MetodologiaSeccion3 client:only="react" transition:persist />
    
    <!-- Sección 4: Mini Casos de Éxito -->
    <MetodologiaSeccion4 client:only="react" transition:persist />
    
    <!-- Sección 5: FAQs -->
    <MetodologiaSeccion5 client:only="react" transition:persist />
    
    <!-- Sección 6: CTA Final + Newsletter -->
    <MetodologiaSeccion6 client:only="react" transition:persist />
</LayoutBasic>
