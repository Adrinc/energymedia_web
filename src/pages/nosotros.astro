---
// nosotros.astro
// Página Nosotros - Energy Media (6 secciones)

import LayoutBasic from '../layouts/LayoutBasic.astro';

// Importar todas las secciones
import NosotrosSeccion1 from '../components/nosotros/Secciones/NosotrosSeccion1';
import NosotrosSeccion2 from '../components/nosotros/Secciones/NosotrosSeccion2';
import NosotrosSeccion3 from '../components/nosotros/Secciones/NosotrosSeccion3';
import NosotrosSeccion4 from '../components/nosotros/Secciones/NosotrosSeccion4';
import NosotrosSeccion5 from '../components/nosotros/Secciones/NosotrosSeccion5';
import NosotrosSeccion6 from '../components/nosotros/Secciones/NosotrosSeccion6';

// SEO metadata
const pageTitle = "Nosotros - Energy Media | De la TV al ROI Digital";
---

<LayoutBasic title={pageTitle} showFooter={true}>
    <!-- Sección 1: Hero con video v_bg_5.mp4 -->
    <NosotrosSeccion1 client:only="react" transition:persist />
    
    <!-- Sección 2: Timeline Histórico (2008-2024) -->
    <NosotrosSeccion2 client:only="react" transition:persist />
    
    <!-- Sección 3: Emmy Award Highlight -->
    <NosotrosSeccion3 client:only="react" transition:persist />
    
    <!-- Sección 4: Filosofía (3 Pilares) -->
    <NosotrosSeccion4 client:only="react" transition:persist />
    
    <!-- Sección 5: Equipo Multicultural -->
    <NosotrosSeccion5 client:only="react" transition:persist />
    
    <!-- Sección 6: CTA Final -->
    <NosotrosSeccion6 client:only="react" transition:persist />
</LayoutBasic>
