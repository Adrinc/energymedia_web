---
import LayoutBasic from '../layouts/LayoutBasic.astro';

// Importar las 4 secciones de Recursos
import RecursosSeccion1 from '../components/recursos/Secciones/RecursosSeccion1';
import RecursosSeccion2 from '../components/recursos/Secciones/RecursosSeccion2';
import RecursosSeccion3 from '../components/recursos/Secciones/RecursosSeccion3';
import RecursosSeccion4 from '../components/recursos/Secciones/RecursosSeccion4';

const pageTitle = "Recursos - Energy Media | Centro de Marketing Multicultural";
---

<LayoutBasic title={pageTitle} showFooter={true}>
  <!-- Sección 1: Hero "Coming Soon" -->
  <RecursosSeccion1 client:only="react" transition:persist />
  
  <!-- Sección 2: Preview de contenido (4 items) -->
  <RecursosSeccion2 client:only="react" transition:persist />
  
  <!-- Sección 3: Newsletter signup -->
  <RecursosSeccion3 client:only="react" transition:persist />
  
  <!-- Sección 4: Alternative CTAs (Portfolio, Metodología, Contacto) -->
  <RecursosSeccion4 client:only="react" transition:persist />
</LayoutBasic>
