---
// portfolio.astro
// Página Portfolio de Energy Media (6 secciones)

import LayoutBasic from '../layouts/LayoutBasic.astro';

// Importar las secciones del Portfolio
import PortfolioSeccion1 from '../components/portfolio/Secciones/PortfolioSeccion1.jsx'; // Hero
import PortfolioManager from '../components/portfolio/components/PortfolioManager.jsx'; // Filtros + Grid (Secciones 2 y 3)
import PortfolioSeccion4 from '../components/portfolio/Secciones/PortfolioSeccion4.jsx'; // Capacidades
import PortfolioSeccion5 from '../components/portfolio/Secciones/PortfolioSeccion5.jsx'; // Reconocimientos
import PortfolioSeccion6 from '../components/portfolio/Secciones/PortfolioSeccion6.jsx'; // CTA Final
---

<LayoutBasic 
  title="Portfolio - Energy Media | Producción de Video Emmy Award" 
  showFooter={true}
>
  <!-- Sección 1: Hero -->
  <PortfolioSeccion1 transition:persist client:only="react" />
  
  <!-- Secciones 2 y 3: Filtros + Grid (manejadas por PortfolioManager) -->
  <PortfolioManager transition:persist client:only="react" />

  <!-- Sección 4: Capacidades de Producción -->
  <PortfolioSeccion4 transition:persist client:only="react" />
  
  <!-- Sección 5: Reconocimientos (Emmy Award) -->
  <PortfolioSeccion5 transition:persist client:only="react" />
  
  <!-- Sección 6: CTA Final -->
  <PortfolioSeccion6 transition:persist client:only="react" />
</LayoutBasic>
